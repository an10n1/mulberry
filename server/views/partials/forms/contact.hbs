<form class="contact-form col-md-10 offset-md-1" data-role="validator">
  <div class="form-group input-control">
    <input type="text" 
           class="form-control"
           name="name"
           placeholder="Имя"
           data-validate="name" 
           data-validate-func="required, minlength"
           data-validate-hints="Введите Ваше имя"
           data-validate-arg=",3"
           required>
  </div>
  <div class="form-group input-control">
    <input type="text" 
           class="form-control" 
           placeholder="Телефон" 
           name="phone"
           data-validate="name" 
           data-validate-func="required"
           data-validate-hints="Введите Ваш номер телефона"
           required>
  </div>
  <div class="form-group input-control">
    <input type="email" 
           class="form-control" 
           name="email"
           placeholder="Email"
           data-validate="name" 
           data-validate-func="required, email"
           data-validate-hints="Введите Ваш email"
           required>
  </div>
  <div class="form-group input-control">
    <textarea class="form-control" 
              placeholder="Сообщение"
              name="message"
              data-validate="name" 
              data-validate-func="required, minlength"
              data-validate-arg=",6"
              data-validate-hints="Введите сообщение"></textarea>
  </div>

  <button class="btn btn-lg btn-red js-send-msg">Отправить</button>
</form>

